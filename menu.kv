
<MenuWidget>:
    canvas.before:
        Color:
            rgba: 0, 0, 0, .8
        Rectangle:
            size: self.size
    Label:
        font_size: dp(60)
        font_name: 'fonts/Sackers-Gothic-Std-Light.ttf'
        text: root.parent.menu_title
        pos_hint: { "center_x": .5, "center_y": .6 }
    Button:
        font_size: dp(30)
        font_name: 'fonts/Eurostile.ttf'
        text: root.parent.menu_button_title
        pos_hint: { "center_x": .5, "center_y": .3 }
        size_hint: .2, .15
        on_press: root.parent.on_menu_button_pressed()
        background_normal: ''
        background_color: 0, .3, 1, .85
    Label:
        text: root.parent.carles_game_title
        font_size: dp(20)
        font_name: 'fonts/Eurostile.ttf'
        pos_hint: {"right": 1, "bottom": 1}
        size_hint: .18, .18


